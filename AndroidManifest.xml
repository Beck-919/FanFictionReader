<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.michaelchentejada.fanfictionreader"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="preferExternal">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="BrowseMenu" >
        </activity>
        <activity android:name="CategoryMenu" >
        </activity>
        <activity android:name="StoryMenu" >
        </activity>
        <activity
            android:name="FilterMenu"
            android:label="@string/story_menu_filter"
            android:theme="@style/Dialog" >
        </activity>
        <activity android:name="SubCategoryMenu" >
        </activity>
        <activity
            android:name="DetailDisplay"
            android:theme="@style/Dialog" >
        </activity>
        <activity android:name="Settings" >
        </activity>
        <activity android:name="CommunityMenu" >
        </activity>
        <activity android:name="SearchMenu" >
        </activity>

        <service android:name="LibraryDownloader" >
        </service>

        <activity android:name="LibraryMenu" >
        </activity>
        <activity
            android:name=".activity.StoryDisplayActivity"
            android:theme="@style/AppActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="m.fanfiction.net" />
                <data android:host="www.fanfiction.net" />
                <data android:pathPrefix="/s/" />

                <category android:name="android.intent.category.DEFAULT" />
                <!-- The BROWSABLE category is required to get links from web pages. -->
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LibraryMenuActivity"
            android:label="@string/menu_library_title"
            android:theme="@style/AppActionBar" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
        </activity>
		<provider
            android:name=".util.StoryProvider"
            android:authorities="com.gmail.michaelchentejada.fanfictionreader.provider"
            android:exported="false" >
        </provider>
		<activity android:name=".activity.NavigationMenuActivity" android:theme="@style/AppActionBar"></activity>
    </application>
</manifest>
