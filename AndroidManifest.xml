<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spicymango.fanfictionreader"
    android:installLocation="preferExternal"
    android:versionCode="4"
    android:versionName="1.03" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppActionBar">
        <activity
            android:name="MainMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="BrowseMenu"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="FilterMenu"
            android:label="@string/menu_story_filter_by"
            android:theme="@style/Dialog" >
        </activity>
        <activity
            android:name="DetailDisplay"
            android:theme="@style/Dialog" >
        </activity>
        <activity android:name="Settings" >
        </activity>

        <service android:name="LibraryDownloader" >
        </service>

        <activity android:name=".activity.StoryDisplayActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="m.fanfiction.net" />
                <data android:host="www.fanfiction.net" />
                <data android:pathPrefix="/s/" />

                <category android:name="android.intent.category.DEFAULT" />
                <!-- The BROWSABLE category is required to get links from web pages. -->
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LibraryMenuActivity"
            android:label="@string/menu_library_title"
            android:parentActivityName="MainMenu" >
        </activity>

        <provider
            android:name="com.spicymango.fanfictionreader.provider.StoryProvider"
            android:authorities="com.spicymango.fanfictionreader.provider"
            android:exported="false" >
        </provider>
        <activity android:name=".activity.NavigationMenuActivity" >
        </activity>
        <activity
            android:name=".activity.StoryMenuActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.SearchActivity"
            android:label="@string/menu_search_title" >
        </activity>
        <activity
            android:name=".activity.CommunityMenuActivity"
            android:label="@string/menu_navigation_title_community" >
        </activity>
        <activity
            android:name=".activity.AboutActivity"
            android:label="@string/menu_button_about" android:theme="@style/Dialog">
        </activity>
    </application>

</manifest>