<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/read_story_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/read_story_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/read_story_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="changePage"
                android:text="@string/read_story_first" />

            <Button
                android:id="@+id/read_story_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="changePage"
                android:text="@string/read_story_prev" />

            <Button
                android:id="@+id/read_story_page_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/read_story_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="changePage"
                android:text="@string/read_story_next" />

            <Button
                android:id="@+id/read_story_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="changePage"
                android:text="@string/read_story_last" />

        </LinearLayout>

    </LinearLayout>
    

</ScrollView>
