<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Spinner
        android:id="@+id/category_menu_header_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/category_menu_sort"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/category_menu_sort" />

    <ToggleButton
        android:id="@+id/category_menu_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/sort_alphabetical"
        android:textOff="@string/sort_numerical"
        android:textOn="@string/sort_alphabetical" />

</RelativeLayout>
