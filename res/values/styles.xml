<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="Black">#000000</color>

    <style name="AppActionBar" parent="@style/Theme.AppCompat">
        <item name="android:actionBarTabBarStyle" tools:targetApi="11">@style/CenteredTabs</item>
        <!-- Support library compatibility -->
        <item name="actionBarTabBarStyle">@style/CenteredTabs</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
    </style>

    <style name="AppActionBarLight" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarTabBarStyle" tools:targetApi="11">@style/CenteredTabs</item>
        <!-- Support library compatibility -->
        <item name="actionBarTabBarStyle">@style/CenteredTabs</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/abc_primary_text_material_light</item>
    </style>

    <style name="AppActionBar.Darker">
        <item name="android:windowBackground">@color/Black</item>
    </style>

    <style name="MaterialLight" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/primary_text_default_material_light</item>
        <item name="android:textColorSecondary">@color/abc_primary_text_material_light</item>
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="toolbarOverlay">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="colorButtonNormal">@color/btn_default_material_light</item>
        
        <!-- Color the status bar black so that it matches the toolbar -->
        <!-- Note that the default color is white -->
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
    </style>

    <style name="MaterialDark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="toolbarOverlay">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="colorButtonNormal">@color/btn_default_material_dark</item>
    </style>

    <style name="MaterialDarker" parent="@style/MaterialDark">
        <item name="android:windowBackground">@color/Black</item>
    </style>

    <style name="DialogDark" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="DialogLight" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="CenteredTabs" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:gravity">center</item>
    </style>

</resources>